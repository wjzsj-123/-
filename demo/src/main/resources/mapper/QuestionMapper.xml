<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.demos.web.mapper.QuestionMapper">
    <sql id="BaseColumnList">
        id, question_set_id, content, type, difficulty, create_time, update_time
    </sql>

    <!-- 新增 -->
    <insert id="insert" parameterType="com.example.demo.demos.web.pojo.Question"
            useGeneratedKeys="true"
            keyProperty="id"
            keyColumn="id">
        INSERT INTO question (
            question_set_id,
            content,
            type,
            difficulty,
            create_time,
            update_time
        ) VALUES (
        #{questionSetId},
        #{content},
        #{type},
        #{difficulty},
        NOW(),
        NOW()
        )
    </insert>

    <!-- 删除 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM question WHERE id = #{id}
    </delete>

    <!-- 更新 -->
    <update id="updateById" parameterType="com.example.demo.demos.web.pojo.Question">
        UPDATE question
        <set>
            <if test="questionSetId != null">question_set_id = #{questionSetId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="type != null">type = #{type},</if>
            <if test="difficulty != null">difficulty = #{difficulty},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询 -->
    <select id="selectById" resultType="com.example.demo.demos.web.pojo.Question">
        SELECT <include refid="BaseColumnList"/> FROM question WHERE id = #{id}
    </select>

    <!-- 根据题库ID查询 -->
    <select id="selectByQuestionSetId" resultType="com.example.demo.demos.web.pojo.Question">
        SELECT <include refid="BaseColumnList"/> FROM question WHERE question_set_id = #{questionSetId}
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultType="com.example.demo.demos.web.pojo.Question">
        SELECT <include refid="BaseColumnList"/> FROM question
    </select>

    <!-- 1. 批量删除题目（根据题库ID） -->
    <delete id="deleteByQuestionSetId" parameterType="java.lang.Long">
        DELETE FROM question
        WHERE question_set_id = #{questionSetId}
    </delete>

    <!-- 2. 根据ID查询题目（包含关联的选项/答案） -->
    <select id="selectByIdWithRelations" resultMap="QuestionWithRelationsResultMap">
        SELECT
        <include refid="BaseColumnList"/>
        FROM question
        WHERE id = #{id}
    </select>

    <!-- 结果映射：关联选项和答案 -->
    <resultMap id="QuestionWithRelationsResultMap" type="com.example.demo.demos.web.pojo.Question">
        <!-- 基础字段映射 -->
        <id column="id" property="id"/>
        <result column="question_set_id" property="questionSetId"/>
        <result column="content" property="content"/>
        <result column="type" property="type"/>
        <result column="difficulty" property="difficulty"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>

        <!-- 关联选择题选项（一对多） -->
        <collection property="options"
                    column="id"
                    select="com.example.demo.demos.web.mapper.QuestionOptionMapper.selectByQuestionId"
                    javaType="java.util.List"
                    ofType="com.example.demo.demos.web.pojo.QuestionOption"/>

        <!-- 关联填空题答案（一对多） -->
        <collection property="fillAnswers"
                    column="id"
                    select="com.example.demo.demos.web.mapper.FillAnswerMapper.selectByQuestionId"
                    javaType="java.util.List"
                    ofType="com.example.demo.demos.web.pojo.FillAnswer"/>
    </resultMap>

    <!-- 新增查询题目关联的选项（关联QuestionOption表） -->
    <select id="selectOptionsByQuestionId" parameterType="Long" resultType="com.example.demo.demos.web.pojo.QuestionOption">
        SELECT * FROM question_option
        WHERE question_id = #{questionId}
        ORDER BY sort_order ASC
    </select>

    <!-- 新增查询题目关联的答案（关联FillAnswer表） -->
    <select id="selectFillAnswersByQuestionId" parameterType="Long" resultType="com.example.demo.demos.web.pojo.FillAnswer">
        SELECT * FROM fill_answer
        WHERE question_id = #{questionId}
        ORDER BY sort_order ASC
    </select>

    <!-- 根据题库ID和类型查询题目 -->
    <select id="selectBySetIdAndType" resultType="com.example.demo.demos.web.pojo.Question">
        SELECT <include refid="BaseColumnList"/> FROM question
        WHERE question_set_id = #{questionSetId}
        AND type = #{type}
        ORDER BY RAND()  <!-- 随机排序，方便后续抽取 -->
    </select>

    <!-- 根据题库ID统计题目数量 -->
    <select id="countByQuestionSetId" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM question
        WHERE question_set_id = #{setId}
    </select>

    <!-- 统计题库内不同类型题目数量-->
    <select id="countByQuestionSetIdAndType" resultType="com.example.demo.demos.web.dto.QuestionCountDTO">
        SELECT
            -- 直接使用1匹配选择题类型
            SUM(CASE WHEN type = 1 THEN 1 ELSE 0 END) as choiceCount,
            -- 直接使用2匹配填空题类型
            SUM(CASE WHEN type = 2 THEN 1 ELSE 0 END) as fillCount,
            -- 直接使用3匹配多选题类型
            SUM(CASE WHEN type = 3 THEN 1 ELSE 0 END) as multiCount
        FROM question
        WHERE question_set_id = #{setId}
    </select>
</mapper>